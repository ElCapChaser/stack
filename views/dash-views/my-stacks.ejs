<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12 col-md-7">
                <div class="card">
                    <div class="header">
                        <h4 class="title">Stack List</h4>
                    </div>
                    <div class="content">
                        <div class="row">
                            <div class="col-md-12">
                                <table class="table table-hover">
                                  <thead>
                                    <tr>
                                      <th>#</th>
                                      <th>Stack Name</th>
                                      <th>Cards</th>
                                      <th>Test</th>
                                      <th>Settings</th>
                                      <th>Privacy</th>
                                    </tr>
                                  </thead>
                                  <tbody>
                                      <% allStacks.forEach((oneStack, index) => { %>
                                        <tr>
                                          <th scope="row"><%= index + 1 %></th>
                                          <td><%= oneStack.stackName %></td>
                                          <td><%= oneStack.cards.length %></td>
                                          <td>
                                          <% if (oneStack.cards.length === 0) { %>
                                            <a href="/dashboard/my-stacks/<%= oneStack._id %>/" class="btn btn-primary beginTest">Add Cards</a>
                                      <%  } else { %>
                                            <a href="/dashboard/my-stacks/<%= oneStack._id %>/test" class="btn btn-primary beginTest">Begin Test</a>
                                      <%  } %>
                                          </td>
                                          <td>
                                            <a href="/dashboard/my-stacks/<%= oneStack._id %>/" class="btn btn-success btn-sm">Edit Stack</a></li>
                                            <form method="post" action="/dashboard/<%=oneStack._id %>/delete">
                                              <button class="btn btn-danger btn-sm delete">Delete</button>
                                            </form>
                                          </td>
                                          <td>
                                           <div class="col-xs-6 col-sm-3">
                                              <a class="btn btn-primary btn-select btn-select-light">
                                                  <input type="hidden" class="btn-select-input" id="" name="" value="" />
                                                  <span class="btn-select-value">Select an Item</span>
                                                  <span class='btn-select-arrow glyphicon glyphicon-chevron-down'></span>
                                                  <ul>
                                                  <% if (oneStack.shared === 'false') { %>
                                                      <li class="selected">
                                                  <%  } else { %>
                                                      <li>
                                                  <%  }  %>
                                                        <form method="post" action="/dashboard/<%=oneStack._id %>/private">
                                                          <span class="privateSetting">Private</span>
                                                        </form>
                                                      </li>
                                                  <% if (oneStack.shared === 'true') { %>
                                                      <li class="selected">
                                                  <%  } else { %>
                                                      <li>
                                                  <%  } %>
                                                        <form method="post" action="/dashboard/<%=oneStack._id %>/shared">
                                                          <span class="sharedSetting">Shared (read-only)</span>
                                                        </form>
                                                      </li>
                                                      <li>Shared (editable)</li>
                                                  </ul>
                                              </a>
                                            </div>
                                          </td>
                                        </tr>
                                      <% }) %>
                                  </tbody>
                                </table>
                            </div>
                            <div class="text-center">
                              <button type="button" class="btn btn-primary btn-success" data-toggle="modal" data-target="#newStack">
                                Create Stack
                              </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
          </div>
      </div>
  </div>

<%# New Stack Modal -----------------------------------------%>

<div class="modal fade" id="newStack" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">New Stack</h4>
      </div>
      <form method="post" action="/dashboard/home">
        <div class="modal-body">
          <div class="form-group">
              <label for="new-stack">Stack Name</label>
              <input type="text" id="new-stack" name="newName" class="form-control border-input" placeholder="New Stack">
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
          <button type="submit" class="btn btn-primary">Save changes</button>
        </div>
      </form>
    </div>
  </div>
</div>
