<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12 col-md-7">
                <div class="card">
                    <div class="header">
                        <h4 class="title">Public Stacks</h4>
                    </div>
                    <div class="content">
                        <div class="row">
                            <div class="col-md-12">
                                <table class="table table-hover">
                                  <thead>
                                    <tr>
                                      <th>#</th>
                                      <th>Stack Name</th>
                                      <th>Cards</th>
                                      <th>Test</th>
                                    </tr>
                                  </thead>
                                  <tbody>
                                      <% allStacks.forEach((oneStack, index) => { %>
                                        <tr>
                                          <th scope="row"><%= index + 1 %></th>
                                          <td><%= oneStack.stackName %></td>
                                          <td><%= oneStack.cards.length %></td>
                                          <td>
                                          <% if (oneStack.cards.length === 0) { %>
                                            <a href="/dashboard/my-stacks/<%= oneStack._id %>/" class="btn btn-primary beginTest">Add Cards</a>
                                      <%  } else { %>
                                            <a href="/dashboard/my-stacks/<%= oneStack._id %>/test" class="btn btn-primary beginTest">Begin Test</a>
                                      <%  } %>
                                          </td>
                                        </tr>
                                      <% }) %>
                                  </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
          </div>
      </div>
  </div>
